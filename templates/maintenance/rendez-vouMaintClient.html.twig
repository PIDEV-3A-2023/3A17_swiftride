{% extends 'baseIndex.html.twig' %}

{% block body %}

    <!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <h1 class="display-4 text-uppercase text-center mb-5">Prenez un rendez-vous</h1>
            <div class="row">
                <div class="col-lg-7 mb-2">
                    <div class="contact-form bg-light mb-4" style="padding: 30px;">
                      {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                            <div class="form-group" >
                                <label>Nos Garages </label>
                                    {{ form_widget(form.idGarage,{'attr':{'class':'custom-select px-4 mb-3' } }) }}
                                      <div class="form-control-feedback" style="color: red;" >
                                        {{ form_errors(form.idGarage) }} 
                                   </div>
                                <div class="form-group">
                                <label>Date et heur de maintenance</label>
                                  {{ form_widget(form.dateMaintenance,{'attr':{'class':'form-control p-4 datetimepicker-input'}})}}
                                   <div class="form-control-feedback" style="color: red;" >
                                        {{ form_errors(form.dateMaintenance) }} 
                                   </div>
                                </div>
                                </div>
                            <div>
                            {{ form_widget(form.suivant,{'attr':{'class':'btn btn-primary py-3 px-5'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-lg-5 mb-2">
                    <div class="bg-secondary d-flex flex-column justify-content-center px-5 mb-4" style="height: 435px;">
                        <div class="d-flex mb-3">
                            <div class="mt-n1">
                                <h6 class="text-light"> Voiture :</h6>
                                <p> {{ v.matricule }} : {{ v.model }} </p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="mt-n1">
                                <h6 class="text-light">Duré de reservation :</h6>
                                <p> 15 jours </p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="mt-n1">
                                <h6 class="text-light"> Référence de reservation :</h6>
                                <p>Ref:879AB9</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="mt-n1">
                                <h5 class="text-light">Le propriétaire</h5>
                                <p class="m-0"> XXX </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

{% endblock %}
