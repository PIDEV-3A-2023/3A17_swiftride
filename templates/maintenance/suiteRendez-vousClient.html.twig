{% extends 'baseIndex.html.twig' %}

{% block body %}


 {% if isfound == true  %}
 <!-- normal alert area start -->
                        <div class="col-lg-8 mt-2">
                                    <div class="alert-items">
                                        <div class="alert alert-danger" role="alert">
                                            <strong>OoOops!</strong> Votre Voiture :  {{ v.marque }} / {{ v.matricule }}
         doit depasser 21 jour pour prendre un autre Rendez-vous pour une maintenance
                                        </div>
                            </div>
                        </div>
                        <!-- normal alert area end -->      
{% endif %}
 <!-- Contact Start -->
    <div class="container-fluid py-2">
        <div class="container pt-5 pb-3">
            <h1 class="display-4 text-uppercase text-center mb-5">Prenez un rendez-vous {{ isfound }}  //  {{ diff }} </h1>
            <div class="row">
                <div class="col-lg-7 mb-2">
                    <div class="contact-form bg-light mb-4" style="padding: 30px;">
                                        {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                                <div class="form-group" >
                                <label>L'heur de maintenance  : </label>
                                 {% if time|length == 0 %}
                                                    <div class="col-lg-8 mt-2">
                                    <div class="alert-items">
                                        <div class="alert alert-danger" role="alert">
                                            <strong>OoOops!</strong> COMPLET..
                                        </div>
                            </div>
                        </div>
                                                {% endif %}
                                                {{ form_widget(form.temps,{'attr':{'class':'custom-radio'} })  }}
                                        <div class="form-control-feedback" style="color: red;" >
                                        {{ form_errors(form.temps) }} 
                                   </div>
                                </div>
                                <div class="form-group">
                               <label for="exampleInputEmail1">Le maintenance est : </label>
                                  {{ form_widget(form.type,{'attr':{'class':'custom-radio'}})}}
                                   <div class="form-control-feedback" style="color: red;" >
                                        {{ form_errors(form.type) }} 
                                   </div>
                                </div>
                            <div>
                            {{ form_widget(form.envoyer,{'attr':{'class':'btn btn-primary py-3 px-5'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-lg-5 mb-2">
                    <div class="bg-secondary d-flex flex-column justify-content-center px-5 mb-4" style="height: 435px;">
                        <div class="d-flex mb-3">
                            <i class="fa fa-2x fa-map-marker-alt text-primary flex-shrink-0 mr-3"></i>
                            <div class="mt-n1">
                                <h5 class="text-light">Head Office</h5>
                                <p>123 Street, New York, USA</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <i class="fa fa-2x fa-map-marker-alt text-primary flex-shrink-0 mr-3"></i>
                            <div class="mt-n1">
                                <h5 class="text-light">Branch Office</h5>
                                <p>123 Street, New York, USA</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <i class="fa fa-2x fa-envelope-open text-primary flex-shrink-0 mr-3"></i>
                            <div class="mt-n1">
                                <h5 class="text-light">Customer Service</h5>
                                <p>customer@example.com</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <i class="fa fa-2x fa-envelope-open text-primary flex-shrink-0 mr-3"></i>
                            <div class="mt-n1">
                                <h5 class="text-light">Return & Refund</h5>
                                <p class="m-0">refund@example.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

{% endblock %}