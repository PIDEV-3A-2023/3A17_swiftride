{% extends 'base.html.twig' %}

{% block booby %}

<div class="col-ml-12">
                        <div class="row">

 <!-- basic form start -->
                              <div class="col-3 mt-5">
                                <div class="card">
                                </div>
                                </div>
                            <div class="col-6 mt-5">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Mettre à jour le materiel N° {{ m.id }} </h4>
                                        {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Intitulé : </label>
                                               {{ form_widget(form.nom,{'attr':{'class':'form-control' , 'value': m.nom }}) }}
                                            </div>
                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.nom) }} 
                                                       </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Reference : </label>
                                               {{ form_widget(form.photo,{'attr':{'class':'form-control','value':m.photo}}) }}
                                            </div>
                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.photo) }} 
                                                       </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Description : </label>
                                               {{ form_widget(form.description,{'attr':{'class':'form-control'},'value': m.description}) }}
                                            </div>

                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.description) }} 
                                                       </div>
                                             <div class="form-group">
                                                <label for="exampleInputPassword1">Description : </label>
                                               {{ form_widget(form.disponibilite,{'attr':{'class':'classe-radio'}, 'checked': true}) }}
                                            </div>
                                            <div class="col-auto my-1">
                                                  {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                                                </div>
                                                   {{form_end(form)}}
                                    </div>
                                </div>
                            </div>
                    </div>
         </div>
                            <!-- basic form end -->
  <style>
 
.classe-radio {
    display: inline-block;
  position: relative;
  padding-left: 25px;
  margin-right: 10px;
  cursor: pointer;
  font-size: 16px;
  line-height: 20px;
}

</style>

{% endblock %}

