{% extends 'base.html.twig' %}

{% block booby %}
<div class="col-ml-12">
                        <div class="row">

 <!-- basic form start -->
                            <div class="col-6 mt-5">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Ajouter des materiels pour le garage N° {{ garage.id }} </h4>
                                        {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Intitulé : </label>
                                               {{ form_widget(form.nom,{'attr':{'class':'form-control' , 'placeholder': 'Intitulé'}}) }}
                                            </div>
                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.nom) }} 
                                                       </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Reference : </label>
                                               {{ form_widget(form.photo,{'attr':{'class':'form-control','placeholder': 'Référence'}}) }}
                                            </div>
                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.photo) }} 
                                                       </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Description : </label>
                                               {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder': 'Description'}}) }}
                                            </div>
                                            <div class="form-control-feedback" style="color: red;" >
                                                       {{ form_errors(form.description) }} 
                                                       </div>
                                            <div class="col-auto my-1">
                                                  {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                                                </div>
                                                   {{form_end(form)}}
                                    </div>
                                </div>
                            </div>
                            <!-- basic form end -->
                              <!-- Flush start -->
                    <div class="col-md-6 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Les materiels dans le garage N° {{ garage.id }}  :  {{ materiels|length}} </h4>
                                <ul class="list-group list-group-flush">
                                {% for m in materiels %}
                                    <li class="list-group-item"> 
                                    {{ m.nom }}/{{ m.photo }} 
                                    {% if m.disponibilite==1 %}
                                <span class="badge badge-pill badge-success">  <i class="fa fa-check"></i></span>
                                {% else %}
                                <span class="badge badge-pill badge-danger"> <i class="fa fa-close"></i></span>
                                {%endif%}
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Flush end -->
                         </div>
                     </div>

{% endblock %} 