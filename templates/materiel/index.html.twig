{% extends 'base.html.twig' %}

{% block booby %}

 <!-- accordion style 3 start -->
                    <div class="col-lg-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="header-title">Materiels</h5>
                                <div id="accordion3" class="according accordion-s3">
                                       <!-- Striped table start -->
                                <div class="single-table">
                                    <div class="table-responsive">
                                        <table class="table table-striped text-center">
                                            <thead class="text-uppercase">
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Intitulé</th>
                                                    <th scope="col">Reference</th>
                                                    <th scope="col">Description</th>
                                                     <th scope="col">Disponibilité</th>
                                                    <th scope="col">Garage</th>
                                                    <th scope="col">Localisation</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for m in materiels %}
                                                <tr>
                                                    <th scope="row"> {{ m.id }} </th>
                                                    <td> {{ m.nom }} </td>
                                                    <td> {{ m.photo }} </td>
                                                    <td> {{ m.description }} </td>
                                                    <td>
                                                    {% if m.disponibilite==1 %}
                                                    <span class="badge badge-pill badge-success">  <i class="fa fa-check"></i></span>
                                                    {% else %}
                                                    <span class="badge badge-pill badge-danger"> <i class="fa fa-close"></i></span>
                                                    {%endif%}
                                                     </td>
                                                     <td> {{ m.idGarage.matriculeGarage }} </td>
                                                     <td> {{ m.idGarage.localisation }} </td>
                                                    <td>
                                                    <ul class="d-flex justify-content-center">
                                                            <li class="mr-3">
                                                            <a href="#" class="text-primary"><i class="fa fa-edit"  data-toggle="modal" data-target="#exampleLongModalLong2"></i></a>
                                                            </li>
                                                            <li><a href="{{ path('app_deleteM',{'id':m.id}) }}" class="text-danger"><i class="ti-trash"></i></a></li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                    <!-- Striped table end -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- accordion style 3 end -->

{% endblock %}



