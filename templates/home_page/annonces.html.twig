{% extends 'base2.html.twig' %}

{% block title %}Liste des annonces{% endblock %}

{% block body %}
   <div class="container">
       <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <h1 class="display-1 text-primary text-center">03</h1>
            <h1 class="display-4 text-uppercase text-center mb-5">Find Your Car</h1>
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-2">
                 {% for voiture in list %}
                    <div class="rent-item  mb-4">
                   <img class="d-block w-100" src="{{  voiture.getImage() }}" alt="Image">
                        <h4 class="text-uppercase mb-4">{{  voiture.getMarque() }}</h4>
                        <div class="d-flex justify-content-center mb-4">
                            <div class="px-2">
                                <i class="fa fa-car text-primary mr-1"></i>
                                <span>{{  voiture.getDateCirculation() }}</span>
                            </div>
                            <div class="px-2 border-left border-right">
                                <i class="fa fa-cogs text-primary mr-1"></i>
                                <span>AUTO</span>
                            </div>
                            <div class="px-2">
                                <i class="fa fa-road text-primary mr-1"></i>
                                <span>{{  voiture.getKilometrage() }}</span>
                            </div>
                        </div>
                        <a class="btn btn-primary px-3" href="">DT{{  voiture.getPrix() }}Day</a>
                    </div>
                     {% endfor %}
                </div>
               
            </div>
        </div>
    </div>
{% endblock %}