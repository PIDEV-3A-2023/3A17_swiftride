


<div class="col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="header-title">Reservation Moyen Transport</h5>
                <div id="accordion3" class="according accordion-s3">
                    <!-- Striped table start -->
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Départ</th>
            <th>Arrivée</th>
            <th>Type moyentransport</th>
            <th>Temps</th>
            <th>Nombre tickets</th>
            <th>Distance</th>
            <th>Prix</th>
        </tr>
    </thead>
    <tbody>
        {% for reservation in reservations %}
            <tr>
                            <td>{{ reservation.nom }}</td>
                <td>{{ reservation.email }}</td>
<td>{{ reservation.depart }}</td>
<td>{{ reservation.arrive }}</td>
<td>{{ reservation.typeM }}</td>
<td>{{ reservation.temps|date('d/m/Y H:i') }}</td>
<td>{{ reservation.nbTicket }}</td>
<td><!-- Code pour afficher la distance --></td>
<td><!-- Code pour afficher le prix --></td>

            </tr>


          

        {% endfor %}
    </tbody>
</table>
</div>

