{% extends 'base.html.twig' %}

{% block title %}Hello ListeAnnoncesController!{% endblock %}

{% block body %}


<div class="col-lg-6 mt-5">
<div class="text-primary">
<p class="display-2" ><abbr title="attribute">Les Annonces </abbr></p>>
  </div>
  </div>
   <br><br><br>
   <div class="container">

                                    <div class="table-responsive">
                                    <div class="table-wrapper">
                                        <table class="table text-center">
                                       
                                         
                                             <thead class="text-uppercase bg-primary">
                                                <tr class="text-white">
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Title</th>
                                                    <th scope="col">Date D'annonce</th>
                                                    <th scope="col">image</th>
                                                    <th scope="col">content</th>
                                                    <th scope="col">action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for annonce in list %}
                                                <tr>
                                                    <th scope="row">{{ annonce.id }}</th>
                                                    <td>{{ annonce.title }}</td>
                                                     <td>{{ annonce.date | date('Y-m-d H:i:s') }}</td>
                                                    <td> <img  src="{{ asset('images/' ~ annonce.getImage()) }}" alt="Image"></td>
                                                    <td>{{ annonce.Content }}</td>
                                                <td>
                                                <a  href="{{ path('gestionannonceupdate', {'id': annonce.id}) }}" class="btn btn-danger">Update</a>
                                                <a class="ti-trash" class="btn btn-danger" href="#" data-toggle="modal" data-target="#confirm-delete-modal" data-id="{{ annonce.id }}">Delete</a>
                                                
                                                </td>
                                                </tr>
                                                    {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                
                                
                            </div>
                        
                        <!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this annonce?
            </div>
            <div class="modal-footer">
            {% for annonce in list %}
                <form action="{{ path('delete', {'id': annonce.id }) }}" method="POST" id="delete-form-{{ annonce.id }}">
                     
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                     {% endfor %}
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                
            </div>
        </div>
    </div>
   </div>

</div>

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Handle click event on delete button
            $('#confirm-delete-modal').on('show.bs.modal', function(e) {
                var id = $(e.relatedTarget).data('id');
                $('#delete-accident-id').val(id);
                $(this).find('.btn-danger').attr('form', 'delete-form-' + id);
            });

            // Submit the form when the delete button in the modal is clicked
            $('.btn-danger').click(function() {
                $(this).parents('form').submit();
            });
        });
    </script>
{% endblock %}
    <div class="navigation">
       {{ knp_pagination_render(pager) }}
         </div>
{% endblock %}
