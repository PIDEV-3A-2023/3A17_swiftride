{% extends 'base.html.twig' %}

{% block booby %}


 

 <!-- accordion style 3 start -->
    <div class="col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="header-title">Moyen Transport</h5>
                <div id="accordion3" class="according accordion-s3">
                    <!-- Striped table start -->
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">type</th>
                                        <th scope="col">numero transport</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for MoyenTransport in t %}
                                        <tr>
                                            <th>{{ MoyenTransport.id }}</th>
                                            <td>{{ MoyenTransport.type }}</td>
                                            <td>{{ MoyenTransport.getNumeroTrans }}</td>
                                            <td>
                                                <ul class="d-flex justify-content-center">
                                                        <li class="mr-3"><a href="{{ path('modifMoyenTransport',{'id':MoyenTransport.id}) }}" class="text-primary"><i class="fa fa-edit"></i></a></li>

                                                       
                                                    
                                                    <li>
           <a href="#" class="text-danger" onclick="confirmDelete('{{ path('supmoyentransport',{'id': MoyenTransport.id}) }}', '{{ MoyenTransport.getId }}')">
                                                            <i class="ti-trash"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                     <script>
function confirmDelete(url, id) {
    if (confirm("Are you sure you want to delete Moyen Transport '" + id + "' ?")) {
        window.location.href = url;
    }
}
</script>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Striped table end -->
                </div>
            </div>
        </div>
    </div>
    <!-- accordion style 3 end -->

{% endblock %}
