{% extends 'base.html.twig' %}

{% block booby %}

 <!-- accordion style 3 start -->
    <div class="col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="header-title">Station</h5>
                <div id="accordion3" class="according accordion-s3">
                    <!-- Striped table start -->
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">VILLE</th>
                                        <th scope="col">NOM DE STATION</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for Station in t %}
                                        <tr>
                                            <th>{{ Station.ids }}</th>
                                            <td>{{ Station.getVille }}</td>
                                            <td>{{ Station.getNomStation }}</td>
                                            <td>
                                                <ul class="d-flex justify-content-center">
                                                        <li class="mr-3"><a href="{{ path('modifStation',{'ids':Station.ids}) }}" class="text-primary"><i class="fa fa-edit"></i></a></li>

                                                       
                                                    
                                                    <li>
                                                        <a href="{{ path('supstation',{'ids': Station.ids}) }}" class="text-danger">
                                                            <i class="ti-trash"></i>
                                                        </a>
                                                    </li>
                                                     
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Striped table end -->
                </div>
            </div>
        </div>
    </div>
    <!-- accordion style 3 end -->

{% endblock %}
