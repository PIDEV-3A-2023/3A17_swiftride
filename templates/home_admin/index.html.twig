{% extends 'base.html.twig' %}


{% block title %}Hello AdminController!{% endblock %}

{% block body %}
  {% for accident in accidents %}
<div class="alert alert-danger" role="alert">
  A new accident occurred: {{ accident.description }} <a href="/listeaccident" class="alert-link">view</a>. Give it a click if you like.
</div>
{% endfor %}
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
  <div class="toast" style="position: absolute; top: 0; right: 0;">
    <div class="toast-header">
   
      <strong class="mr-auto">You have {{ accidents|length }} new accidents</strong>
       {% for accident in accidents %}
      <small>{{ accident.date|date('F j, Y') }}</small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
       <span aria-hidden="true">&times;</span>
      </button>
    
    </div>
    <div class="toast-body">
      A new accident occurred: {{ accident.description }}
    </div>
      {% endfor %}
  </div>
</div>
<div class="col-md-6 col-sm-4 clearfix">
                        <ul class="notification-area pull-right">
                            <li id="full-view"><i class="ti-fullscreen"></i></li>
                            <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                            <li class="dropdown">
                                <i class="ti-bell dropdown-toggle" data-toggle="dropdown">
                                    <span>  {{ accidents|length }} </span>
                                </i>
                                <div class="dropdown-menu bell-notify-box notify-box">
                                    <span class="notify-title">You have {{ accidents|length }} new accidents <a href="/listeaccident">view all</a></span>
                                    <div class="nofity-list">
                                    {% for accident in accidents %}
                                        <a href="#" class="notify-item">
                                            <div class="notify-thumb"><i class="ti-key btn-danger"></i></div>
                                            <div class="notify-text">
                                                <p>A new accident occurred: {{ accident.description }}</p>
                                                <span>{{ accident.date|date('F j, Y') }}</span>
                                            </div>
                                        </a>
                       
                                    {% endfor %}
                                   </div>
                               </div>
                            </li>
 
                                        
                           
                            <li class="settings-btn">
                                <i class="ti-settings"></i>
                            </li>
                        </ul>
                    </div>
             
            

{% endblock %}
