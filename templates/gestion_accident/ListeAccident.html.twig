{% extends 'base.html.twig' %}


{% block title %}Hello!{% endblock %}

{% block body %}

<div class="col-lg-6 mt-5">
<div class="text-primary">
<p class="display-2" ><abbr title="attribute">Les Accidents</abbr></p>>
  </div>
  </div>
  <br><br><br>
           <div class="container">

                                    <div class="table-responsive">
                                    <div class="table-wrapper">
                                        <table class="table text-center">
                                        <div class="table-title">
					                  
							             
						                 </div>
                                         
                                             <thead class="text-uppercase bg-danger">
                                                <tr class="text-white">
                                                    <th >ID</th>
                                                    <th>type</th>
                                                   <th >date</th>
                                                    <th>description</th>
                                                    <th >lieu</th>
                                                    <th >Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for accidents in list %}
                                                <tr>
                                                     <td>{{ accidents.id }}</td>
                                                    <td>{{ accidents.type }}</td>
                                                    
                                                    <td>{{ accidents.date | date('Y-m-d H:i:s') }}</td>
                                                    <td>{{ accidents.description }}</td>
                                                    <td>{{ accidents.lieu }}</td>
                                                <td>
                                                <a  href="{{ path('update', {'id': accidents.id}) }}" class="btn btn-danger">Update</a>
                                                <a class="ti-trash" class="btn btn-danger" href="#" data-toggle="modal" data-target="#confirm-delete-modal" data-id="{{ accidents.id }}">Delete</a>
                                                
                                                </td>
                                                </tr>
                                                    {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                
                                
                            </div>

                            <div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Accident?
            </div>
            <div class="modal-footer">
              {% for accidents in list %}
                <form action="{{ path('delete', {'id': accidents.id }) }}" method="POST" id="delete-form-{{ accidents.id }}">
                     
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accidents.id) }}">
                     {% endfor %}
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                
            </div>
        </div>
    </div>
   </div>

</div>
           
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</div>           
                        <a href="{{ path('app_gestion_accident') }}" class="btn btn-primary">Add Accident</a>
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Handle click event on delete button
            $('#confirm-delete-modal').on('show.bs.modal', function(e) {
                var id = $(e.relatedTarget).data('id');
                $('#delete-accident-id').val(id);
                $(this).find('.btn-danger').attr('form', 'delete-form-' + id);
            });

            // Submit the form when the delete button in the modal is clicked
            $('.btn-danger').click(function() {
                $(this).parents('form').submit();
            });
        });
    </script>
{% endblock %}

{% endblock %}
